- @audits.each do |audit|
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        %b
          = audit.name
        | Start date:
        = audit.startDate
        | End date:
        = audit.endDate
        = link_to "Edit", edit_audit_path(audit), remote: true, class: "btn btn-default"
        = link_to "Delete", audit_delete_path(audit), remote: true, class: "btn btn-danger"
    .panel-body
      - audit.tasks.each do |task|
        %h5= task.descr
      = render "tasks/form", audit: audit
      / = link_to "Add a task!", new_task_path(audit_id: audit.id), class: "btn btn-default"
