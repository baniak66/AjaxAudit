%nav.navbar.navbar-default
  .container
    .navbar-brand
      =link_to t("header.title"), root_path
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a{:href=>"#", :class=>"dropdown-toggle", "data-toggle"=>"dropdown"}
          = t('header.menu.language')
          =glyph("menu-down")
        %ul{:class=>"dropdown-menu", :role=>"menu"}
          %li= link_to t('header.menu.en'), locale: "en"
          %li= link_to t('header.menu.pl'), locale: "pl"
      -if user_signed_in?
        %li.dropdown
          %a{:href=>"#", :class=>"dropdown-toggle", "data-toggle"=>"dropdown"}
            =current_user.email
            =glyph("menu-down")
          %ul{:class=>"dropdown-menu", :role=>"menu"}
            %li= link_to t('header.settings'), edit_user_registration_path
            %li= link_to t('header.logout'), destroy_user_session_path, :method => :delete
      - else
        %li= link_to t('header.login'), new_user_session_path
        %li= link_to t('header.signup'), new_user_registration_path
