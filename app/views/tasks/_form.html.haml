=form_for @task, url: tasks_path(@task, audit_id: audit.id), remote: true, html: { style: "display:inline;" } do |f|
  %ul.errors
    .form-group
      = f.label "Task description", class: "control-label"
      = f.text_field :descr, class: "form-control"
    .form-group
      = f.submit class: "btn btn-primary"

